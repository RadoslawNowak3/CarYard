<!doctype html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/mystyle.css">
    <title><%= title %></title>
</head>
<body>
<div class = "header">
    <img src="/images/CarYard2.png" class="center">
</div>
<div class="topnav">
    <a href="/"> About Us </a>
    <a href="/pictures">Browse Pictures</a>
    <a class="float-right" href="/pictures/add" title="Add a New Picture">Add a Picture</a>
</div>
<div class="table-responsive-md">
    <% if (pictures.length > 0) {%>
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Description</th>
                <th scope="col">Date</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            <% pictures.forEach((Zdjecie, index) => { %>
                <% var imglink = Zdjecie.Link
                    var id = Zdjecie.ID_zdjecia
                    var text = Zdjecie.Data_dodania.toString().split(' ')
                    for(var i =0;i<text.length;i++)
                        if(text[i].includes("GMT")) {
                            text.length = i
                            break;
                        }
                    var datetime=text[0]
                    for(var i=1;i<text.length;i++)
                        datetime += ' ' +text[i]
                %>
                <%
                    var description = Zdjecie.Opis.toString()
                %>
                <tr>
                    <td class = "img"><img src="<%=imglink%>" class="img-fluid" alt=""></td>
                    <td>
                        <%=description%>
                    </td>
                    <td><%= datetime %></td>
                    <td>  <a href="/pictures/picture/<%=id%>"class="btn btn-sm btn-success">Add comment</a> </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-center">No pictures found</p>
    <% } %>
</div>
</div>
</body>
